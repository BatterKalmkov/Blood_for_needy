<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bobby.blooddonation.needdonor"
    android:background="#facbcb">

    <Spinner
        android:id="@+id/spinner11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView59"
        android:layout_alignLeft="@+id/spinner12"
        android:layout_alignStart="@+id/spinner12" />

    <Spinner
        android:id="@+id/spinner12"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"
        android:layout_below="@+id/spinner11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

    <Spinner
        android:id="@+id/spinner21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner12"
        android:layout_alignRight="@+id/spinner12"
        android:layout_alignEnd="@+id/spinner12"
        android:layout_alignLeft="@+id/spinner12"
        android:layout_alignStart="@+id/spinner12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button8"
        android:layout_below="@+id/spinner21"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urgent Blood Required?"
        android:id="@+id/textView26"
        android:textSize="25dp"
        android:textColor="#e72525"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please fill this form and we will send a message to all available donors in your region based on the blood group requested by you"
        android:id="@+id/textView59"
        android:layout_below="@+id/textView26"
        android:layout_alignParentRight="false"
        android:layout_margin="10dp"
        android:textColor="#000000" />

</RelativeLayout>

