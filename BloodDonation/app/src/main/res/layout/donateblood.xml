<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:transitionGroup="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Eligibility Criteria"
                android:id="@+id/textView13"
                android:textSize="25dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textColor="#e71616"
                android:textStyle="bold"
                android:layout_marginBottom="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOs and DON&apos;Ts of blood donation"
                android:id="@+id/textView27"
                android:layout_below="@+id/textView13"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#e81313"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView36"
                android:layout_below="@+id/textView27"
                android:layout_centerHorizontal="true"
                android:text="In order to ensure safe and health environment to both donors as well as recipients, we greatly recommend to follow the below rules:"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView37"
                android:layout_below="@+id/textView36"
                android:layout_centerHorizontal="true"
                android:textSize="16dp"
                android:textColor="#e81313"
                android:text="DO donate blood, only if you satisfy all of the following conditions"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are between age group of 18-55years"
                android:id="@+id/textView38"
                android:layout_below="@+id/textView37"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="textStart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your weight is 50 kgs or more."
                android:id="@+id/textView39"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:layout_below="@+id/textView38"
                android:layout_alignLeft="@+id/textView38"
                android:layout_alignStart="@+id/textView38"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Your hemoglobin is 12.5 gm% minimum."
                android:id="@+id/textView40"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:layout_below="@+id/textView39"
                android:layout_alignLeft="@+id/textView39"
                android:layout_alignStart="@+id/textView39"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Your last blood donation was 3 or more months earlier."
                android:id="@+id/textView41"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:layout_below="@+id/textView40"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView42"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:layout_below="@+id/textView41"
                android:layout_alignLeft="@+id/textView41"
                android:layout_alignStart="@+id/textView41"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:text="You are healthy and have not suffered from malaria, typhoid or other transmissible disease in the recent past" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView43"
                android:textSize="16dp"
                android:textColor="#e81313"
                android:text="DO NOT donate blood, if you have any of the following conditions"
                android:textAlignment="center"
                android:layout_below="@+id/textView42"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cold / fever in the past 1 week."
                android:id="@+id/textView44"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:layout_below="@+id/textView43"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Under treatment with antibiotics or any other medication."
                android:id="@+id/textView45"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:layout_below="@+id/textView44"
                android:layout_alignLeft="@+id/textView44"
                android:layout_alignStart="@+id/textView44"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cardiac problems, hypertension, epilepsy, diabetes (on insulin therapy), history of cancer, chronic kidney or liver disease, bleeding tendencies, venereal disease etc."
                android:id="@+id/textView46"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:layout_below="@+id/textView45"
                android:layout_alignLeft="@+id/textView45"
                android:layout_alignStart="@+id/textView45"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Major surgery in the last 6 months."
                android:id="@+id/textView47"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:layout_below="@+id/textView46"
                android:layout_alignLeft="@+id/textView46"
                android:layout_alignStart="@+id/textView46"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vaccination in the last 24 hours."
                android:id="@+id/textView48"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:layout_below="@+id/textView47"
                android:layout_alignLeft="@+id/textView47"
                android:layout_alignStart="@+id/textView47"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Had a miscarriage in the last 6 months or have been pregnant / lactating in the last one year."
                android:id="@+id/textView49"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:layout_below="@+id/textView48"
                android:layout_alignLeft="@+id/textView48"
                android:layout_alignStart="@+id/textView48"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shared a needle to inject drugs/ have history of drug addiction."
                android:id="@+id/textView50"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:layout_below="@+id/textView49"
                android:layout_alignLeft="@+id/textView49"
                android:layout_alignStart="@+id/textView49"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Been tested positive for antibodies to HIV."
                android:id="@+id/textView51"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textAlignment="textStart"
                android:layout_below="@+id/textView50"
                android:layout_alignLeft="@+id/textView50"
                android:layout_alignStart="@+id/textView50"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Close"
                android:id="@+id/button7"
                android:background="#de1113"
                android:layout_below="@+id/textView51"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>